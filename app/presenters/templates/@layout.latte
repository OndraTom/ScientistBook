<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width">
		<link rel="stylesheet" type="text/css" href="{$basePath}/css/global.css" />

		<title>{ifset title}{include title|striptags} | {/ifset}Scientists</title>
	</head>

	<body>
		<div id="content">
			<header>
				<nav id="left-nav">
					<a n:href="Homepage:default">Homepage</a>
					<a n:href=":Front:Homepage:default">Front</a>
				</nav>

				<nav id="right-nav">
					{if $user->isLoggedIn()}
						<a n:href=":Admin:Homepage:default">Administration</a>
						<a n:href="logout!">Log-out</a>
					{else}
						<a n:href="Login:default">Log-in</a>
					{/if}
				</nav>
			</header>

			<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>

			{include content}
		</div>

		{block scripts}
			<script src="{$basePath}/js/netteForms.min.js"></script>
		{/block}
	</body>
</html>
