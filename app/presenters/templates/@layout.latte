			<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>

			{include content}
		</div>

		{block scripts}
			<script src="{$basePath}/js/netteForms.min.js"></script>
		{/block}
	</body>
</html>
