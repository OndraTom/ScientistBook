{block content}

<h1>Projects</h1>

<div class="items-list">
	<div class="list-item" n:foreach="$items as $item">
		<a class="ajax" n:href="editItem! $item->id">{$item->title}</a> | <a class="confirm" n:href="deleteItem! $item->id">Delete</a>
	</div>

	<button data-dialog="edit-dialog" class="dialog-trigger">New Project</button>
</div>

{snippet editDialog}
	{control projectForm}
{/snippet}